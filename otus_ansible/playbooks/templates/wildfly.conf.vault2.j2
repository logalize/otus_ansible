# General configuration for the init.d scripts,
# not necessarily for JBoss AS itself.
# default location: /etc/default/wildfly

## Location of WildFly
JBOSS_HOME="{{ jboss_home_dir }}"

## The username who should own the process.
JBOSS_USER="{{ jboss_user }}"
JBOSS_PASS="{{ wildfly_user_pass }}"

## The username and password for os configuration.
OS_USER="{{ os_root_user }}"
OS_USER_PASS="{{ os_root_pass }}"

## The mode WildFly should start, standalone or domain
JBOSS_MODE="{{ wildfly_mode }}"

## Configuration for standalone mode
JBOSS_CONFIG="{{ jboss_config }}"

{% if wildfly_startup_wait is defined %}
## The amount of time to wait for startup
STARTUP_WAIT={{ wildfly_startup_wait }}
{% endif %}

{% if wildfly_shutdown_wait is defined  %}
## The amount of time to wait for shutdown
SHUTDOWN_WAIT={{ wildfly_shutdown_wait }}
{% endif %}

## Location to keep the console log
JBOSS_CONSOLE_LOG="/var/log/wildfly/console.log"

# Need to modify the init script to account for JBOSS_OPTS
# Allows us to pass system properties to WildFly
JBOSS_OPTS="-P={{ jboss_console_log }}"